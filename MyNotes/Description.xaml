<Window x:Class="MyNotes.Description"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyNotes"
        mc:Ignorable="d"
        Title="Description" Height="350" Width="500">
    <Grid>
        <StackPanel
            DataContext="{Binding SelectedNote}">
            <Label Content="Название" Margin="20 0"/>
            <TextBox Text="{Binding Name}" Margin="20 0"/>
            <Label Content="Описание" Margin="20 0"/>
            <TextBox Text="{Binding Description}" Margin="20 0" Height="100" AcceptsReturn="True"/>
            <Label Content="Дедлайн" Margin="20 0"/>
            <DatePicker SelectedDate="{Binding DeadLine}" Margin="20 0"/>
            <Label Content="Род занятия" Margin="20 0"/>
            <ComboBox ItemsSource="{Binding Occupations}"
                      SelectedItem="{Binding SelectedNote.Occupation}"
                      DisplayMemberPath="Name" Margin="20 0">
                <ComboBoxItem Content="Добавить занятие" Selected="OpenOccupation"/>
            </ComboBox>
        </StackPanel>
    </Grid>
</Window>
